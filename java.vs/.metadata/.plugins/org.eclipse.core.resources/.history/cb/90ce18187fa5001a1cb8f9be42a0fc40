<title></title>

<script type="text/javascript" src="../js/jquery-3.5.1.min.js"></script>
<script type="text/javascript">
	$(document).ready(function() {
		(document).ready(function() {
			$("#btn1").click(function() {
			var sports = $("input:checked");
			var str = "";
			for (var i = 0; i < sports.length; i++) {
			str += $(sports[i]).next().text() + " ";
			}
			$("#result").text(str);
			})
		
	});
</script>

</head>
