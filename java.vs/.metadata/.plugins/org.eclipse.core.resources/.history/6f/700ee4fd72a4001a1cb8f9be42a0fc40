<script type="text/javascript" src="../js/jquery-3.5.1.min.js"></script>
<script type="text/javascript">
	$(document).ready(function(){
		$('.error').hide();
		$('.infobox option').click(function(){
			//var value = $('#lang').val();
			var value = $('#lang option:selected').val();
			if(value==0){
				$('.error').show();
				event.preventDefault();
			}else{
				$('.error').hide();
			}
		});
	});
</script>
<style type="text/css">
.error {
	color: red;
	font-size: 0.8em;
}
</style>
